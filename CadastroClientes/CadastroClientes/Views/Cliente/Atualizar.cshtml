@{
    ViewData["Title"] = "Atualiza Cliente";
}

<h1>ATUALIZAR CLIENTE</h1>
<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome do Cliente</label>
        <input type="text" class="form-control" id="nome" placeholder="FULANO DA SILVA">

    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="fulano@email.com">
    </div>
    <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" id="telefone" placeholder="(11)98765-4321">
    </div>

    <a role="button" class="btn btn-primary">ATUALIZAR</a>
</form>